<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.menulk.app.menu.MenuActivity">


    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/images">
    </RelativeLayout>

    <ImageView
        android:id="@+id/overlapImage"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/shopname"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@drawable/white" />

    <TextView
        android:id="@+id/shopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutBottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="COFFEE BEAN"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutTop"
        android:layout_centerHorizontal="true"
        android:pointerIcon="@drawable/star"
        android:text="Rateing 4.1"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/opentime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutBottom"
        android:layout_centerHorizontal="true"
        android:pointerIcon="@drawable/time"
        android:text="10.30a.m. - 3,30 p.m."
        android:textColor="#808080" />

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layoutTop" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/meunrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</RelativeLayout>
